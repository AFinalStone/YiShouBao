<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:gravity="center"
    android:paddingBottom="20dp"
    android:background="@drawable/common_selector_action_item_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_model"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/icon_empty"/>

    <TextView
        android:id="@+id/tv_modelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBlack_FF666666"
        android:textSize="@dimen/textFontSize_14" />
</LinearLayout>