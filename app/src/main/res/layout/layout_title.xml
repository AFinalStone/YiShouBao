<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/linearLayout_titleLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:minWidth="100dp"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/iv_titleLeft"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:focusable="false"
                android:src="@mipmap/layout_title_left_icon"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_titleLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="左侧标题"
                android:textColor="@color/colorBlack_FF333333"
                android:textSize="@dimen/textFontSize_14"
                android:visibility="invisible" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout_titleRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:minWidth="100dp"
            android:orientation="horizontal"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_titleRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="左侧标题"
                android:textColor="@color/colorBlack_FF333333"
                android:textSize="@dimen/textFontSize_14"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_titleRight"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                android:focusable="false"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/linearLayout_titleRight"
            android:layout_toRightOf="@id/linearLayout_titleLeft"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="页面标题"
            android:textColor="?attr/titleTextColor"
            android:textSize="@dimen/textFontSize_20"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>