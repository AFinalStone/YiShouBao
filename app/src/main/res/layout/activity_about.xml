<?xml version="1.0" encoding="utf-8"?>
<com.jude.fitsystemwindowlayout.FitSystemWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/colorWhite_FFFFFFFF"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/common_shape_dividing_linecolor" />

        <LinearLayout
            android:id="@+id/about_app"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/common_selector_action_item_background"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="关于应用"
                android:textColor="@color/colorBlack_FF333333"
                android:textSize="@dimen/textFontSize_16" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dividingLineColor" />

        <LinearLayout
            android:id="@+id/setting_app_version"
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:background="@drawable/common_selector_action_item_background"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="当前版本"
                android:textColor="@color/colorBlack_FF333333"
                android:textSize="@dimen/textFontSize_16" />


            <TextView
                android:id="@+id/about_app_version"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:text="version: 1.0"
                android:textColor="@color/colorBlack_FFDEDEDE"
                android:textSize="@dimen/textFontSize_14" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dividingLineColor" />

        <LinearLayout
            android:id="@+id/about_me"
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:background="@drawable/common_selector_action_item_background"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="关于公司"
                android:textColor="@color/colorBlack_FF333333"
                android:textSize="@dimen/textFontSize_16" />


            <TextView
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:text="https://www.dainif.com"
                android:textColor="@color/colorBlack_FFDEDEDE"
                android:textSize="@dimen/textFontSize_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dividingLineColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/common_shape_dividing_linecolor" />


    </LinearLayout>


</com.jude.fitsystemwindowlayout.FitSystemWindowsLinearLayout>