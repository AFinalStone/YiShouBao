<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jvhe.yishoubao">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.HomeActivity"></activity>
        <activity android:name=".activity.MyShopActivity" />
        <activity android:name=".activity.SaleStatisticsChartActivity" />
        <activity android:name=".activity.CheckStandMoneyRecordActivity" />
